<% provide(:title, t(".home")) %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>

      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t(".welcome_msg") %></h1>

    <h2>
      <p><%= t(".description_first") %>
        <%= link_to t(".link_ruby_on_rails"), "https://www.railstutorial.org/" %>
        <%= t(".description_after_link") %>
      </p>
    </h2>

    <%= link_to t(".sign_up_now"), "/signup", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
